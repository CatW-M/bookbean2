  <body>
    
<header>
  <div class="collapse bg-dark" id="navbarHeader">
    <div class="container">
      <div class="row">
        <div class="col-sm-8 col-md-7 py-4">
          <h4 class="text-white">About</h4>
          <p class="text-muted">Search for a Favorite Book and We'll recommend a coffee to enjoy as you read! Login or signup to find the perfect java for your favorite genre.</p>
        </div>
        <div class="col-sm-4 offset-md-1 py-4">
          <h4 class="text-white">Actions</h4>
          <ul class="list-unstyled">
            <% if (!currentUser) {%>
                <li><a href="/auth/signup">Signup</a></li>
                <li><a href="/auth/login">Login</a></li>
            <% } else { %>
                <li><a href="/auth/logout">Logout</a></li>
                <li><a href="/profile">Profile</a></li>
                <li><a href="books">Search Books</a></li>
            <% } %>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="navbar navbar-dark bg-dark shadow-sm">
    <div class="container">
      <a href="#" class="navbar-brand d-flex align-items-center">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" aria-hidden="true" class="me-2" viewBox="0 0 24 24"><path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"/><circle cx="12" cy="13" r="4"/></svg>
        <strong>Book Bean</strong>
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarHeader" aria-controls="navbarHeader" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    </div>
  </div>
</header>

<main>

  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">Results</h1>
        <p class="lead text-muted">Save a book to your bookshelf or get more details and coffee pairings.</p>
        <p>
            <form method="get" action="/books">
                <button type="submit">Back to Search</button>
            </form>
        </p>
      </div>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div class="container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% books.forEach((book) => { %>
            <div class="col">
                <div class="card shadow-sm">
                <img class="bd-placeholder-img card-img-top" width="100%" height="225" src="<%= book.volumeInfo.imageLinks?.thumbnail %> ">
                  <div class="card-body">
                    <p class="card-text"><%= book.volumeInfo.title %> - <%= book.volumeInfo.authors %></p>
                    <div class="col-lg-6 col-md-8 mx-auto">
                      
                        <p>
                        <!-- Form for adding book to profile -->
                        <form method="POST" action="/books/new">
                            <input type="text" value="<%= book.volumeInfo.title  %>" name="title" hidden>
                            <input type="text" value="<%= book.volumeInfo.authors %>" name="author" hidden>
                            <input type="text" value="<%= book.volumeInfo.imageLinks?.thumbnail %>" name="img" hidden>
                            <input type="text" value="<%= book.volumeInfo.description %>" name="description" hidden>
                            <input type="text" value="<%= currentUser.id %>" name="userId" hidden>
                            <input type="text" value="<%= book.volumeInfo.categories %>" name="categories" hidden>
                            <br>
                            <button type="submit">Add Book to Your Library</button>
                        </form>
                        </p>
                        <p>
                        <form method="POST" action="/books/detailspassthrough/" >
                            <input type="text" value="<%= JSON.stringify(book) %>" name="bookJSONstring" hidden>
                            <button type="submit">Get Book Detail/Coffee Recommendations</button>
                        </form>
                        </p>
                    
                    
                    </div>
                  </div>
                </div>
              </div>
            <br>
        <% }) %> 
        
      </div>
    </div>
  </div>

</main>

