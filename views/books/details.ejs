<main>
    <div class="container">
        <div class="detail">
            <h1>
                <%= book.volumeInfo.title %>
            </h1>
            <h2>By <%= book.volumeInfo.authors %>
            </h2>
            <img src="<%= book.volumeInfo.imageLinks?.thumbnail %>" alt="<%= book.volumeInfo.title %>">
            <br>
            <%= book.volumeInfo.description %>
        </div>
    </div>
    <br>
    <div class="container">
        <div class="detail">
            <h1>Coffee Pairing</h1>
            <h2><%=coffee.name %></h2>
            <img src="/assets/img/<%- coffee.imgUrl %> " alt="<%=coffee.name %>">
            <br>
            <h5><%=coffee.description %></h5>
            <p>
                <a href="https://beardedmancoffee.com/coffee/" class="btn btn-primary my-2">Buy Now</a>
            </p>
        </div>
    </div>
    
</main>