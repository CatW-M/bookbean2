<main>

  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">Welcome to your profile, <%= name %>
        </h1>
        <p class="lead text-muted">(<%= email %>)</p>
        <p>
          <a href="/books" class="btn btn-primary my-2">Search Books</a>
          <a href="/profile/edit" class="btn btn-primary my-2">Edit Your Profile</a>

        </p>
      </div>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div class="container">
      <h1 class="fw-light">Your Bookshelf</h1>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% the_books.forEach((book)=> { %>
          <div class="col">
            <div class="card shadow-sm">
              <img class="bd-placeholder-img card-img-top" width="100%" height="225" src="<%= book.dataValues.img %>">
              <div class="card-body">
                <p class="card-text">
                  <%= book.dataValues.title %> - <%= book.dataValues.author %>
                </p>
                <div class="col-lg-6 col-md-8 mx-auto">

                  <p>
                    <!-- Form for deleting book from profile -->
                  <form method="POST" action="/books/<%= book.id %>/?_method=DELETE">
                    <a type="button" class="btn btn-sm btn-outline-secondary" href="/mybook/<%= book.id %>">Views</a>
                    <button type="submit" type="button" class="btn btn-sm btn-outline-secondary">Remove</button>
                  </form>
                  </p>


                </div>
              </div>
            </div>
          </div>
          <br>
          <% }) %>

      </div>
    </div>
  </div>

</main>